{
  "type": "object",
  "properties": {
    "country": {
      "type": "string"
    },
    "postal_code": {
      "type": "string"
    }
  },
  "required": [
    "country",
    "postal_code"
  ],
  "if": {
    "properties": {
      "country": {
        "const": "US"
      }
    }
  },
  "then": {
    "properties": {
      "postal_code": {
        "pattern": "^\\d{5}(-\\d{4})?$"
      }
    }
  },
  "else": {
    "properties": {
      "postal_code": {
        "pattern": "^[A-Z0-9 -]+$"
      }
    }
  }
}