{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "type": { "const": "FeatureCollection" },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "const": "Feature" },
          "geometry": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "type": { "const": "Point" },
                  "coordinates": {
                    "type": "array",
                    "prefixItems": [
                      { "type": "number", "minimum": -180, "maximum": 180 },
                      { "type": "number", "minimum": -90, "maximum": 90 }
                    ],
                    "items": false
                  }
                },
                "required": ["type", "coordinates"]
              },
              {
                "type": "object",
                "properties": {
                  "type": { "const": "Polygon" },
                  "coordinates": {
                    "type": "array",
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "array",
                        "prefixItems": [
                          { "type": "number" },
                          { "type": "number" }
                        ],
                        "items": false,
                        "minItems": 2,
                        "maxItems": 2
                      },
                      "minItems": 4
                    },
                    "minItems": 1
                  }
                },
                "required": ["type", "coordinates"]
              }
            ]
          },
          "properties": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "required": ["type", "geometry", "properties"]
      }
    }
  },
  "required": ["type", "features"]
}
