{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "device_id": { "type": "string" },
    "device_type": { "enum": ["sensor", "actuator", "gateway", "controller"] },
    "firmware_version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "location": {
      "type": "object",
      "properties": {
        "building": { "type": "string" },
        "floor": { "type": "integer" },
        "room": { "type": "string" },
        "coordinates": {
          "type": "object",
          "properties": {
            "lat": { "type": "number", "minimum": -90, "maximum": 90 },
            "lng": { "type": "number", "minimum": -180, "maximum": 180 }
          },
          "required": ["lat", "lng"]
        }
      },
      "required": ["building"]
    },
    "readings": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "sensor_type": { "const": "temperature" },
              "value": { "type": "number" },
              "unit": { "enum": ["celsius", "fahrenheit"] },
              "timestamp": { "type": "string", "format": "date-time" }
            },
            "required": ["sensor_type", "value", "unit", "timestamp"]
          },
          {
            "type": "object",
            "properties": {
              "sensor_type": { "const": "humidity" },
              "value": { "type": "number", "minimum": 0, "maximum": 100 },
              "timestamp": { "type": "string", "format": "date-time" }
            },
            "required": ["sensor_type", "value", "timestamp"]
          },
          {
            "type": "object",
            "properties": {
              "sensor_type": { "const": "motion" },
              "detected": { "type": "boolean" },
              "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
              "timestamp": { "type": "string", "format": "date-time" }
            },
            "required": ["sensor_type", "detected", "timestamp"]
          }
        ]
      }
    },
    "config": {
      "type": "object",
      "properties": {
        "poll_interval_seconds": { "type": "integer", "minimum": 1, "maximum": 3600 },
        "alerts_enabled": { "type": "boolean" },
        "thresholds": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "min": { "type": "number" },
              "max": { "type": "number" }
            }
          }
        }
      }
    },
    "status": { "enum": ["online", "offline", "error", "maintenance"] },
    "last_seen": { "type": "string", "format": "date-time" }
  },
  "required": ["device_id", "device_type", "firmware_version", "status"]
}
