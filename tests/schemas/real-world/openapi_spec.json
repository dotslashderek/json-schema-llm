{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "openapi": { "type": "string", "pattern": "^3\\.\\d+\\.\\d+$" },
    "info": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "version": { "type": "string" },
        "description": { "type": "string" },
        "contact": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "url": { "type": "string", "format": "uri" }
          }
        }
      },
      "required": ["title", "version"]
    },
    "paths": {
      "type": "object",
      "patternProperties": {
        "^/": {
          "type": "object",
          "patternProperties": {
            "^(get|post|put|delete|patch)$": {
              "type": "object",
              "properties": {
                "summary": { "type": "string" },
                "operationId": { "type": "string" },
                "tags": { "type": "array", "items": { "type": "string" } },
                "parameters": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "in": { "enum": ["query", "header", "path", "cookie"] },
                      "required": { "type": "boolean" },
                      "schema": { "type": "object" }
                    },
                    "required": ["name", "in"]
                  }
                },
                "responses": {
                  "type": "object",
                  "patternProperties": {
                    "^[1-5]\\d{2}$": {
                      "type": "object",
                      "properties": {
                        "description": { "type": "string" }
                      },
                      "required": ["description"]
                    }
                  }
                }
              },
              "required": ["summary", "responses"]
            }
          }
        }
      }
    }
  },
  "required": ["openapi", "info", "paths"]
}
